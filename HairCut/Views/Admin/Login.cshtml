@model HairCut.Models.User@{     Layout = null;}
<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/AdminAssets/css/bootstrap1.min.css" />
    <link rel="stylesheet" href="~/Content/AdminAssets/vendors/themefy_icon/themify-icons.css" />
    <link rel="stylesheet" href="~/Content/AdminAssets/vendors/font_awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/Content/AdminAssets/vendors/scroll/scrollable.css" />
    <link rel="stylesheet" href="~/Content/AdminAssets/css/metisMenu.css">
    <link rel="stylesheet" href="~/Content/AdminAssets/css/style1.css" />
    <link rel="stylesheet" href="~/Content/AdminAssets/css/colors/default.css" id="colorSkinCSS">
</head>

<body class="crm_body_bg">

    <section class="">
        <div class="main_content_iner ">
            <div class="container-fluid p-0">
                <div class="row justify-content-center m-0">
                    <div class="col-12">
                        <div class="dashboard_header mb_50">
                            <div class="row">
                                <div class="col-lg-12 text-center">
                                    <div class="dashboard_header_title">
                                       
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="white_box mb_30">
                            <div class="row justify-content-center">
                                <div class="col-lg-6">                                    @if (ViewBag.Msg != null)                                    {                                        <h5 class="text-danger">@ViewBag.Msg</h5>                                    }                                    <div class="modal-content cs_modal">                                        <div class="modal-header justify-content-center theme_bg_1">                                            <h5 class="modal-title text_white">Log in</h5>                                        </div>                                        <div class="modal-body">                                            @using (Html.BeginForm("Login", "Admin", FormMethod.Post))                                            {                                                <div class="">                                                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", @placeholder = "Enter your email" })                                                </div>                                                <div class="">                                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Enter your Password",@type="password" })                                                </div>                                                <button class="btn_1 full_width text-center">Login</button>                                            }                                        </div>                                    </div>                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <script src="~/Content/AdminAssets/js/jquery1-3.4.1.min.js"></script>
    <script src="~/Content/AdminAssets/js/popper1.min.js"></script>
    <script src="~/Content/AdminAssets/js/bootstrap1.min.js"></script>
    <script src="~/Content/AdminAssets/js/metisMenu.js"></script>
    <script src="~/Content/AdminAssets/vendors/scroll/perfect-scrollbar.min.js"></script>
    <script src="~/Content/AdminAssets/vendors/scroll/scrollable-custom.js"></script>
    <script src="~/Content/AdminAssets/js/custom.js"></script>
</body>
</html>