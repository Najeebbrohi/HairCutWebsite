@model IEnumerable<HairCut.Models.Working_Hours>
@{
    ViewBag.Title = "WorkingHours";
}

<!-- Page Header Start -->
<div class="container-fluid page-header py-5 wow fadeIn bg-dark" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white text-uppercase mb-3 animated slideInDown">Working Hours</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center text-uppercase mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Pages</a></li>
                <li class="breadcrumb-item text-primary active" aria-current="page">Working Hours</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- Working Hours Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="h-100">
                    <img class="img-fluid h-100" src="~/Content/assets/img/open.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="backgrounColor h-100 d-flex flex-column justify-content-center p-5">
                    <p class="d-inline-flex bg-dark text-primary py-1 px-4 me-auto">Working Hours</p>
                    <h1 class="text-uppercase mb-4 text-white">Professional Barbers Are Waiting For You</h1>
                    <div>
                        @foreach (var item in Model)
                        {
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <h6 class="text-uppercase mb-0 text-white">@item.Days</h6>
                                <span class="text-uppercase">@item.Timing</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Working Hours End -->
