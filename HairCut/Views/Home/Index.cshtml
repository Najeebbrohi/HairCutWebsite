        <div class="row g-0">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="backgrounColor h-100 d-flex flex-column justify-content-center p-5">
                    <p class="d-inline-flex bg-dark text-primary py-1 px-4 me-auto">Price & Plan</p>
                    <h1 class="text-uppercase mb-4 text-white">Check Out Our Barber Services And Prices</h1>
                    <div>
                        @foreach (var item in ViewBag.Prices)
                        {
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <h6 class="text-uppercase mb-0 text-white">@item.Name</h6>
                                <span class="text-uppercase text-primary">Rs. @item.Price1</span>
                            </div>

                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="h-100">
                    <img class="img-fluid h-100" src="~/Content/assets/img/price.jpg" alt="">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Price End -->
<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <p class="d-inline-block backgrounColor text-primary py-1 px-4">Our Barber</p>
            <h1 class="text-uppercase">Meet Our Barber</h1>
        </div>
        <div class="row g-4">
            @foreach (var item in ViewBag.Barbars)
            {
                <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="team-item">
                        <div class="team-img position-relative overflow-hidden">
                            <img class="img-fluid" src="@Url.Content(item.ImagePath)" alt="">
                            <div class="team-social">
                                <a class="btn btn-square" href="@item.Facebook" target="_blank"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-square" href="@item.Twitter" target="_blank"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-square" href="@item.Instagram" target="_blank"><i class="fab fa-instagram"></i></a>
                            </div>
                        </div>
                        <div class="backgrounColor text-center p-4">
                            <h5 class="text-uppercase text-white">@item.Name</h5>
                            <span class="text-primary">@item.Designation</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Team End -->
<!-- Working Hours Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <div class="h-100">
                    <img class="img-fluid h-100" src="~/Content/assets/img/open.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="backgrounColor h-100 d-flex flex-column justify-content-center p-5">
                    <p class="d-inline-flex bg-dark text-primary py-1 px-4 me-auto">Working Hours</p>
                    <h1 class="text-uppercase mb-4 text-white">Professional Barbers Are Waiting For You</h1>
                    <div>
                        @foreach (var item in ViewBag.Working)
                        {
                            <div class="d-flex justify-content-between border-bottom py-2">
                                <h6 class="text-uppercase mb-0 text-white">@item.Days</h6>
                                <span class="text-uppercase">@item.Timing</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Working Hours End -->
<!-- Testimonial Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
            <p class="d-inline-block backgrounColor text-primary py-1 px-4">Testimonial</p>
            <h1 class="text-uppercase">What Our Clients Say!</h1>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
            @foreach (var item in ViewBag.Testimonial)
            {
                <div class="testimonial-item text-center">
                    <h4 class="text-uppercase">@item.Heading</h4>
                    <p class="text-primary">@item.Profession</p>
                    <span class="fs-5">@item.Comment</span>
                </div>
            }
        </div>
    </div>
</div>
<!-- Testimonial End -->